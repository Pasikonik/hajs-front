<h2>Registration</h2>

<form {{action "register" on="submit"}}>
  <div class="form-group">
    <label for="email">Email</label>
    {{input value=email placeholder="Enter Email" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="username">Username</label>
    {{input value=username placeholder="Enter username" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    {{input value=password type="password" placeholder="Enter Password" class="form-control"}}
  </div>

  <button type="submit" class="center-block btn btn-default">Register!</button>
</form>
