<div class="form row justify-content-center">
  <div class="col-4">
    <BsForm @model={{this}} @onSubmit={{action "register"}} as |form|>
      <form.element @controlType="email" @label="Email" @placeholder="email" @property="email" />
      <form.element @controlType="username" @label="Username" @placeholder="username" @property="username" />
      <form.element @controlType="password" @label="Password" @placeholder="password" @property="password" />
      <BsButton @defaultText="Register" @type="outline-success" @block={{true}} @buttonType="submit" />
    </BsForm>
  </div>
</div>
