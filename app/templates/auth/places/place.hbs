<div class="place text-center">
  {{fa-icon 'home' class="justify-content-center" size="4x"}}

  <h1>
    {{model.name}}
  </h1>

  {{link-to 'Back' 'auth.places'}}

  <div class="place__users">
    {{#each model.users as |user|}}
      <div class="place__user">
        {{user.username}}
      </div>
    {{/each}}
  </div>
</div>
