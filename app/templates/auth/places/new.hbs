<h2 class="text-center">New place</h2>

<div class="form row justify-content-center">
  <div class="col-5">

    <BsForm @model={{this.model}} @onSubmit={{action "create"}} as |form|>
      <form.element @controlType="text" @label="Name" @property="name" />
      <form.element @controlType="number" @label="Rent" @property="rent" />
      <BsButton @defaultText="Create" @type="outline-success" @block={{true}} @buttonType="submit" />
    </BsForm>
  </div>
</div>
