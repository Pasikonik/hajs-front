<div class="text-center">
  <h5>{{this.dwellers.length}}</h5>
  <FaIcon @icon="balance-scale" @size="4x" />
  <br><br>

  {{#if this.currentUser.isPayer}}
    {{#each this.dwellers as |dweller|}}
      <div>
        <strong>{{dweller.username}}</strong>
        <span class={{if (gt dweller.debt 0) "red" "green"}}>
          ({{dweller.debt}})
        </span>
      </div>
    {{/each}}
  {{else}}
    <h2 class={{if (gt this.currentUser.debt 0) "red" "green"}}>
      {{this.currentUser.debt}}z≈Ç
    </h2>
  {{/if}}
</div>
