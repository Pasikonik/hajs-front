<div class="form row justify-content-center">
  <div class="col-3">
    <BsForm @model={{this}} @onSubmit={{action "authenticate"}} as |form|>
      <form.element @controlType="text" @label="Identificator" @placeholder="Email or username" @property="identification" />
      <form.element @controlType="password" @label="Password" @placeholder="Password" @property="password" />
      <BsButton @defaultText="Login" @type="outline-success" @block={{true}} @buttonType="submit" />
    </BsForm>
  </div>
</div>
